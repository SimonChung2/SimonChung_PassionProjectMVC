@model SimonChung_PassionProject.Models.CarDto
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Car</h2>
<form action="/car/update/@Model.CarID" method="POST">
    <div>
        <label>Year:</label><input type="number" min="1900" name="Year" value="@Model.Year" />
    </div>
    <div>
        <label>Mileage(km):</label><input type="number" min="0" name="Mileage" value="@Model.Mileage"/>
    </div>
    <div>
        <label>Price:</label><input type="number" min="1" name="Price" value="@Model.Price"/>
    </div>
    <div>
        <label>Model ID:</label><input type="number" min="1" name="ModelID" value=""/>
    </div>
    <div>
        <label>Dealer ID:</label><input type="number" min="1" name="DealerID" value=""/>
    </div>
    <div>
        <input type="submit" value="Edit Car" />
    </div>
</form>

